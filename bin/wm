#!/usr/bin/env bash

###
# script to start a window manager from the terminal / in WSL
###

# common functions
source ~/.local/scripts/common.sh

# wm selection
echo "Which window manager do you want to use?"
echo "1) Sway"
echo "2) Hyprland"
read -r wm

case $wm in
  1)
    wm_name="sway"
    ;;
  2)
    wm_name="hyprland"
    ;;
  *)
    echo "Invalid selection. Exiting."
    exit 1
    ;;
esac
echo "You selected $wm_name"

# start sway
if [[ $wm_name == "sway" ]]; then
  # wsl - set display size to the screen resolution - 40px for the windows taskbar
  if [ "$(is_wsl)" == "true" ]; then
    echo "set \$displaySize \"1920x1040\"" > ~/.config/sway/config.d/displaySize
  fi

  # start sway
  sway -d
fi

# start hyprland
if [[ $wm_name == "hyprland" ]]; then
  echo "Hyprland does not run in WSL yet."
  exit 1
fi
