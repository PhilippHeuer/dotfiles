Host *
  SendEnv LANG LC_*
  ForwardX11 no
  ForwardAgent yes
  AddressFamily inet
  ServerAliveInterval 15
  ConnectTimeout 20
  Compression yes

# user config
Include ~/.config/ssh/servers

# git over ssh

# - github
Host github.com
  HostName github.com
  AddressFamily inet
  IdentityFile ~/.ssh/id_git
  # tag: hidden

# - gitlab
Host gitlab.com
  HostName gitlab.com
  AddressFamily inet
  IdentityFile ~/.ssh/id_git
  # tag: hidden
