# add keys to ssh-agent
AddKeysToAgent yes

# default config
Host *
  SendEnv LANG LC_*
  ForwardX11 no
  AddressFamily inet
  ServerAliveInterval 15
  ConnectTimeout 20
  Compression yes

# cache ssh connections
Host *
  ControlMaster auto
  ControlPath ~/.ssh/S.%r@%h:%p
  ControlPersist 15m

# user config
Include ~/.ssh/servers

# git over ssh

# - github
Host github.com
  HostName github.com
  AddressFamily inet
  IdentityFile ~/.ssh/id_git
  # tag: hidden

# - gitlab
Host gitlab.com
  HostName gitlab.com
  AddressFamily inet
  IdentityFile ~/.ssh/id_git
  # tag: hidden
