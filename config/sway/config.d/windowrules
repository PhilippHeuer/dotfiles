###
# window rules

# terminals
for_window [app_id="^alacritty$"] opacity 0.8
for_window [app_id="^foot$"] opacity 0.8
for_window [app_id="^kitty$"] opacity 0.8

# browsers
for_window [class="^firefox$"] opacity 0.8
for_window [class="^librewolf$"] opacity 0.8
for_window [class="^Brave-browser$"] opacity 0.8

# vscode
for_window [class="^Code$"] opacity 0.9
for_window [class="^VSCodium$"] opacity 0.9

# jetbrains
for_window [class="^jetbrains"] opacity 0.9

# obsidian
for_window [class="^obsidian"] opacity 0.9

# dbeaver
for_window [app_id="^DBeaver$"] opacity 0.9

###
# floating windows

# generic fzf popups
for_window [title="^fzf_popup_small$"] floating enable
for_window [title="^fzf_popup_small$"] resize set 50 ppt 50 ppt
for_window [title="^fzf_popup$"] floating enable
for_window [title="^fzf_popup$"] resize set 80 ppt 80 ppt

# weather report
for_window [title="^weather_report$"] floating enable
for_window [title="^weather_report$"] resize set 1130 790

# lazygit
for_window [title="^lazygit$"] floating enable
for_window [title="^lazygit$"] resize set 90 ppt 90 ppt

# albert launcher
for_window [title="^Albert$"] floating enable

# waypaper
for_window [app_id="^waypaper$"] floating enable
for_window [app_id="^waypaper$"] resize set 50 ppt 50 ppt
