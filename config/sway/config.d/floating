# window: generic fzf popups
for_window [title="^fzf_popup_small$"] floating enable
for_window [title="^fzf_popup_small$"] resize set 50 ppt 50 ppt
for_window [title="^fzf_popup$"] floating enable
for_window [title="^fzf_popup$"] resize set 80 ppt 80 ppt

# window: weather report
for_window [title="^weather_report$"] floating enable
for_window [title="^weather_report$"] resize set 1130 790

# window: lazygit
for_window [title="^lazygit$"] floating enable
for_window [title="^lazygit$"] resize set 90 ppt 90 ppt

# window: albert launcher
for_window [title="^Albert$"] floating enable
